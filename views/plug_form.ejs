<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('style_connects') %>
    <title><%= title %></title>
</head>
<body>
    <%- include('layout') %>
    <div class="container">
        <form action="" method="POST">
            <h1>FORM</h1>
            <label for="name">Name:</label>
            <input placeholder="ZaÅ›lepka" name="name" type="text" value="<% if(update){%> <%= plug.name %> <%} %>" >
            <label for="material">Material:</label>
            <input placeholder="PP" type="text" name="material" value="<% if(update){%> <%= plug.material %> <%} %>">
            <label for="price">Price: <% if(update&&plug.price){%> (Current: <%if(plug.price) %>   <%= plug.price %>) <%} %></label>
            <input placeholder="13.57" type="number" step="0.01" name="price">
            <label for="size">Size: <% if(update&&plug.size){%> (Current: <%if(plug.size) %>   <%= plug.size %>) <%} %>  </label>
            <input type="number" placeholder="63" name="size">
            <label for="quantity">Quantity: <% if(update&&plug.quantity){%> (Current: <%= plug.quantity %>) <%}%></label>
            <input placeholder="72" type="number" name="quantity">
            <button type="submit"><% if(update){%> UPDATE <%} else{%>ADD<% } %></button>
        </form>
    <% if(errors){
        %>
        
        <ul class="errors">
              
            <% for(error in errors){
                %> 
                <li><%= (errors[error].msg) %></li>
                
                <%
            } %>
        </ul>
        <%
    } %>
    </div>
    
</body>
</html>